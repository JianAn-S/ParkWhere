<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp">

                <!-- Car Park Icon -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@color/icon_background"
                    android:padding="12dp"
                    android:src="@drawable/ic_outline_garage_black_24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="?attr/colorPrimary" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Car Park Address -->
                <TextView
                    android:id="@+id/text_car_park_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="Blk 123 Toa Payoh Lor 1"
                    android:textColor="@color/bold_text"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Car Park Number -->
                <TextView
                    android:id="@+id/text_car_park_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp"
                    android:text="Car Park BE28 "
                    android:textColor="?attr/android:textColorSecondary"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Distance From Car Park -->
            <TextView
                android:id="@+id/text_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end"
                android:padding="2dp"
                android:text="0.5 km"
                android:textColor="@color/bold_text"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Divider Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="4dp"
            android:background="?attr/android:listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="58dp"
            android:layout_marginBottom="4dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:padding="2dp">

            <!-- Car Park Availability-->
            <LinearLayout
                android:id="@+id/car_availability_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_directions_car_black_24dp"
                    app:tint="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/text_car_availability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="25/100"
                    android:textColor="@color/bold_text"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeMaxTextSize="16sp"
                    android:autoSizeStepGranularity="1sp"/>

            </LinearLayout>

            <!-- Motorcycle Availability -->
            <LinearLayout
                android:id="@+id/motorcycle_availability_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_two_wheeler_black_24dp"
                    app:tint="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/text_motorcycle_availability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="25/100"
                    android:textColor="@color/bold_text"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/no_information_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/text_no_information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="No Data Available"
                    android:textColor="@color/bold_text"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Bookmark Icon -->
            <ImageView
                android:id="@+id/icon_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_outline_bookmark_border_black_24dp"
                app:tint="?attr/colorPrimary" />

        </LinearLayout>

        <!-- Last Updated Time -->
        <TextView
            android:id="@+id/text_last_updated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Updated 2 min ago"
            android:textColor="?attr/android:textColorTertiary"
            android:textSize="12sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- xmlns:app and xlmns:tools are usually declared in the top-level tag of the layout file -->

    <data>
        <variable
            name="viewModel"
            type="com.jianan.parkwhere.ui.map.MapViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.map.MapFragment">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:elevation="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <fragment
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"/>

        </androidx.cardview.widget.CardView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_search_radius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_outline_radius_white_24dp"
            app:tint="?attr/colorPrimary"
            app:backgroundTint="@color/location_background_tint"
            app:fabSize="normal"
            app:layout_constraintBottom_toTopOf="@+id/button_recenter_location"
            app:layout_constraintEnd_toEndOf="@+id/map" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_recenter_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:src="@{viewModel.locationButtonLiveData ? @drawable/ic_baseline_near_me_black_24dp : @drawable/ic_outline_near_me_disabled_black_24dp}"
            android:tint="@{viewModel.locationButtonLiveData ? @color/location_enabled_tint : @color/location_disabled_tint}"
            app:backgroundTint="@color/location_background_tint"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="@+id/map"
            app:layout_constraintEnd_toEndOf="@+id/map" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom style for Material Button Toggle Group -->
    <style name="CustomButtonToggleGroup" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/button_toggle_group_text_color</item>
        <item name="backgroundTint">@color/button_toggle_group_background</item>
        <item name="cornerRadius">12dp</item>
        <item name="strokeColor">@color/button_toggle_group_stroke_color</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Animation to eliminate flicker when switching themes -->
    <style name="ThemeAnimationTransition">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>
</resources>